
@model List<ResultCategoryDTO>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Kategori Görseli</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.ImageUrl</td>
                <td><a href="/Admin/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a></td>
            </tr>


        }

    </table>
    <a href="/Admin/CreateCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
</div>
